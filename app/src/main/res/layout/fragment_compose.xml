<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.simpletweets.fragments.ComposeFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ivProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_user_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sai anudeep"
        android:id="@+id/tvName"
        android:textColor="#ff050605"
        android:textSize="14sp"
        android:visibility="visible"
        android:enabled="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/ivProfile"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@saianudeepm"
        android:id="@+id/tvScreenName"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTweet"
        android:layout_below="@+id/ivProfile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="What&apos;s happening?"
        android:background="#00000000"
        android:minHeight="100dp"
        android:gravity="top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet"
        android:id="@+id/btnSubmit"
        android:textAllCaps="false"
        android:background="#ff3fb1dd"
        android:textColor="#ffffffff"
        android:layout_below="@+id/etTweet"
        android:layout_alignRight="@+id/etTweet"
        android:layout_alignEnd="@+id/etTweet"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:textAllCaps="false"
        android:textColor="#ffffffff"
        android:layout_below="@+id/etTweet"
        android:layout_alignRight="@+id/tvName"
        android:layout_alignEnd="@+id/tvName"
        android:background="#ffdd816c" />

</RelativeLayout>
